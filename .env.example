# Example environment file for Claude RDP
# Copy to .env and modify as needed

# Claude API Configuration
ANTHROPIC_API_KEY=your-api-key-here

# User Configuration
SERVICE_USER_PUID=1000
SERVICE_USER_PGID=1000

# Timezone
TZ=America/New_York

# RDP Password (leave empty for random generation)
SERVICE_PASSWORD_CLAUDE_RDP=

# Nvidia GPU Selection (optional)
# NVIDIA_VISIBLE_DEVICES=0,1

# Performance Tuning (optional)
# __GL_SYNC_TO_VBLANK=0
# __GL_SHADER_DISK_CACHE_SIZE=10737418240

# For Coolify deployments
# SERVICE_FQDN_CLAUDE_RDP_3389=your-domain.com